{
  "name": "pcmr",
  "version": "1.0.1",
  "description": "PC Masterrace",
  "author": "Aleksandar Vuk Jovanovic, Fynn Lohse, Jonas Pfannkuche, Tayfun GÃ¼lbasi, Vera Meermeier",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "dev": "npm run dev-env && HOST=0.0.0.0 nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "serve": "nuxt serve",
    "generate": "nuxt build --target static && nuxt export",
    "dev-env": "truncate -s 0 .env",
    "prod-env": "echo \"# Frontend base URL\nPCMR_BASE_URL_PROD=https://pc-mr.de\n\n# Rest API\n# Don't forget the trailing slash\nPCMR_REST_API_PROD=https://api.pc-mr.de/api/\n\n# Keycloak token endpoint\nKEYCLOAK_TOKEN_ENDPOINT_PROD=https://auth.pc-mr.de/auth/realms/pcmr/protocol/openid-connect/token\" > .env",
    "lint:script": "eslint --ext .js,.vue --color --cache --cache-location tmp/.eslintcache --ignore-path .gitignore .",
    "lint:scriptfix": "npm run lint:script -- --fix",
    "format": "prettier --write \"${FOLDER:-*}/**/*.*\""
  },
  "lint-staged": {
    "*.*": [
      "npm run format"
    ],
    "*.{js,vue}": [
      "npm run lint:scriptfix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prod-env && git add .env && lint-staged"
    }
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^21.0.0",
    "@ckeditor/ckeditor5-vue": "^1.0.1",
    "@nuxtjs/auth": "^4.9.1",
    "@nuxtjs/axios": "^5.12.0",
    "bootstrap": "^4.5.0",
    "bootstrap-vue": "^2.16.0",
    "jwt-decode": "^2.2.0",
    "nuxt": "^2.14.0",
    "vue-client-only": "^2.0.0",
    "vue-currency-filter": "^5.1.0",
    "vuex-persist": "^2.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-throw-expressions": "^7.10.4",
    "@nuxtjs/style-resources": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-nuxt": "^1.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.2"
  }
}
